{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
    <div class="container">
        <div class="fos_user_user_show">
            <h1>User</h1>
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Telnr</th>
                    <td>{{ user.telnr }}</td>
                </tr>
                <tr>
                    <th>Mobilenr</th>
                    <td>{{ user.mobilenr }}</td>
                </tr>
                <tr>
                    <th>First_name</th>
                    <td>{{ user.firstName }}</td>
                </tr>
                <tr>
                    <th>Insertion</th>
                    <td>{{ user.insertion }}</td>
                </tr>
                <tr>
                    <th>Last_name</th>
                    <td>{{ user.lastName }}</td>
                </tr>
                <tr>
                    <th>Adres</th>
                    <td>{{ user.adres }}</td>
                </tr>
                <tr>
                    <th>Zip</th>
                    <td>{{ user.zip }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ user.city }}</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>{{ user.country }}</td>
                </tr>
                </tbody>
            </table>
            <a href="{{ path('bankcard_index') }}" class="btn btn-primary">Bankcard overview</a>
            <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-info float-right">Edit profile</a>
        </div>
    </div>
{% endblock %}
